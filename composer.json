{
    "name": "berry/htmx",
    "description": "HTMX extension for berry/html",
    "type": "library",
    "require": {
        "berry/html": ">=0.11"
    },
    "require-dev": {
        "pestphp/pest": "^4.2",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "scripts": {
        "test": "php vendor/bin/pest",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage"
    },
    "scripts-aliases": {
        "test": [
            "pest"
        ]
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Berry\\Htmx\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "authors": [
        {
            "name": "Christopher Kaster",
            "email": "me@atomicptr.de"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
